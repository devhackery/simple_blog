<!DOCTYPE html>
<html>
  <head>
    <title>SimpleBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <%= if current_user %>
     
      <%= link_to(' Log out'.html_safe, destroy_user_session_path, method: 'delete')%>
        <%= else %>
        <%=link_to('<span class="glyphicon glyphicon-log-in"></span> Login'.html_safe, new_user_session_path)%>
        <%= link_to('<span class="glyphicon glyphicon-saved"></span> Register'.html_safe, new_user_registration_path)%>
        <%= end %>
    <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
